<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/GreyBackground"
    android:background="#fe2b2b2b"
    android:onClick="setContentView">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView"
        android:gravity="right"
        android:textSize="40dp"
        android:editable="true"
        android:textColorHint="#ffffffff"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:outlineProvider="background"
        android:theme="@style/Base.TextAppearance.AppCompat.Button"
        android:password="false"
        android:enabled="true"
        android:background="#ff969687"
        android:height="50dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:id="@+id/button1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:id="@+id/button2"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:id="@+id/button3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:id="@+id/button4"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:layout_marginTop="13dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:id="@+id/button5"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_alignTop="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:id="@+id/button6"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:id="@+id/button7"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:id="@+id/button8"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_alignTop="@+id/button7"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:id="@+id/button9"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_alignTop="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="0"
        android:id="@+id/button0"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_below="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="."
        android:id="@+id/buttonDecimal"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff2b77ff"
        android:clickable="false"
        android:layout_above="@+id/buttonEquals"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="="
        android:id="@+id/buttonEquals"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ff31c419"
        android:clickable="true"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/button0"
        android:layout_alignRight="@+id/buttonMultiply"
        android:layout_alignEnd="@+id/buttonMultiply"
        android:layout_alignLeft="@+id/buttonDivide"
        android:layout_alignStart="@+id/buttonDivide"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="C"
        android:id="@+id/buttonClear"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#fff2e82e"
        android:clickable="false"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:id="@+id/buttonAdd"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ffff1e1c"
        android:clickable="false"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/buttonClear"
        android:layout_alignStart="@+id/buttonClear"
        android:nestedScrollingEnabled="false"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="-"
        android:id="@+id/buttonMinus"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ffff1e1c"
        android:clickable="false"
        android:layout_alignTop="@+id/button9"
        android:layout_alignLeft="@+id/buttonClear"
        android:layout_alignStart="@+id/buttonClear"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="x"
        android:id="@+id/buttonMultiply"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#ffff1e1c"
        android:clickable="false"
        android:layout_alignTop="@+id/buttonDivide"
        android:layout_alignLeft="@+id/buttonMinus"
        android:layout_alignStart="@+id/buttonMinus"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="รท"
        android:id="@+id/buttonDivide"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#ffff1e1c"
        android:clickable="false"
        android:layout_above="@+id/buttonEquals"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:textColor="#ffffffff" />

</RelativeLayout>
